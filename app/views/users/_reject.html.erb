<%= form_for(Friendship.where(friend_id: current_user, user_id: pending_friend.id).first, html: { method: :delete }, remote: true) do |f| %>
    <%= hidden_field_tag :friend_id, pending_friend.id %>
    <%= hidden_field_tag :user_id, current_user.id %>
    <%= f.submit "Reject", class: "btn btn-xs btn-primary" %>
<% end %>
