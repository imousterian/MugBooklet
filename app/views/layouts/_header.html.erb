<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <% if user_signed_in? %>
                <% if current_user.guest? %>
                    <a class="navbar-brand" href="#">Logged in as Guest</a>
                <% else %>
                    <a class="navbar-brand" href="#">Logged in as <%= current_user.email %></a>
                <% end %>
            <% else %>
                <%= link_to "Mug Book", root_path, class: "navbar-brand" %>
                <%= link_to "Contact", contact_path, class: "navbar-brand" %>
            <% end %>
        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav pull-right">
                <li><%= link_to "Home", root_path %></li>
                <% if user_signed_in? %>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Account <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <% if current_user.guest? %>
                                <%= render 'static_pages/edit_links' %>
                            <% else %>
                                <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
                                <%= render 'static_pages/edit_links' %>
                            <% end %>
                        </ul>
                    </li>
                <% else %>
                    <li><%= link_to "Login", new_user_session_path %></li>
                    <li><%= link_to "Sign up", new_user_registration_path %></li>
                <% end %>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</div>
